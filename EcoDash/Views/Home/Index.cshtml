@{
    ViewData["Title"] = "EcoDash - Dash Towards a Greener Future";
}

<div class="container mt-5 text-center">
    <div class="jumbotron bg-light shadow-sm p-4 rounded">
        <h1 class="display-3 text-success">Welcome to EcoDash</h1>
        <p class="lead text-muted">Your smarter, greener way to commute.</p>
        <hr class="my-4">
        <p>Discover the best eco-friendly routes and reduce your carbon footprint. EcoDash helps you choose the greenest way to get from point A to B with real-time data from public transport, ride-sharing, and bike-sharing services.</p>
        <a class="btn btn-success btn-lg" href="/SignUp" role="button">Find Your Eco-Friendly Route</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">Reduce Your Carbon Footprint</h5>
                    <p class="card-text">EcoDash calculates the environmental impact of each route, helping you make greener choices every day.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">Smart Route Suggestions</h5>
                    <p class="card-text">Get real-time recommendations based on distance, cost, and carbon emissions, using data from multiple services.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">Compete with Friends</h5>
                    <p class="card-text">Track your eco-scores, compete with friends, and see how you rank on the global leaderboard!</p>
                </div>
            </div>
        </div>
    </div>
</div>
